# Configuração do Banco de Dados PostgreSQL Externo
# Substitua pelos dados do seu banco de dados na outra máquina
DATABASE_URL=postgresql://usuario:senha@IP_DO_SERVIDOR_DB:5432/nome_do_banco

# Exemplo:
# DATABASE_URL=postgresql://postgres:minhasenha@192.168.1.100:5432/imobiliaria
# ou
# DATABASE_URL=postgresql://postgres:minhasenha@meuservidor.com:5432/imobiliaria

# JWT Secret para autenticação (gere uma chave segura)
JWT_SECRET=seu_jwt_secret_muito_seguro_aqui_com_pelo_menos_32_caracteres

# Configurações de Upload
UPLOAD_DIR=./public/uploads

# Configurações do Next.js
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=production

# Configurações de Rede
PORT=4000
HOSTNAME=0.0.0.0

# URL base para o EasyPanel (substitua pelo seu domínio configurado no EasyPanel)
# IMPORTANTE: Use o domínio real configurado no EasyPanel, sem a porta
# Exemplo: https://imobiliaria.seudominio.com
NEXT_PUBLIC_BASE_URL=https://imobiliaria.infopowersistemas.com.br

# Configuração para API
NEXT_PUBLIC_API_URL=https://imobiliaria.infopowersistemas.com.br/api